# ERC Trading System - Environment Configuration Template
# Copy this file to .env and fill in your actual credentials

# =============================================================================
# POLYMARKET API CREDENTIALS
# Get from: https://polymarket.com/settings/api
# =============================================================================
POLYMARKET_API_KEY=your_polymarket_api_key
POLYMARKET_SECRET=your_polymarket_secret
POLYMARKET_PASSPHRASE=your_polymarket_passphrase

# =============================================================================
# KALSHI API CREDENTIALS (V3 API)
# Get from: https://kalshi.com/settings/api
# =============================================================================
KALSHI_API_KEY=your_kalshi_api_key
KALSHI_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END RSA PRIVATE KEY-----

# =============================================================================
# ALPACA API CREDENTIALS
# Get from: https://app.alpaca.markets/paper/dashboard/overview
# =============================================================================
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# =============================================================================
# WALLET CONFIGURATION (for Polymarket on-chain)
# =============================================================================
PRIVATE_KEY=your_wallet_private_key
WALLET_ADDRESS=your_wallet_address

# =============================================================================
# RPC CONFIGURATION
# =============================================================================
POLYGON_RPC_URL=https://polygon-rpc.com

# =============================================================================
# DISCORD NOTIFICATIONS (OPTIONAL)
# Create webhook: Discord Server Settings > Integrations > Webhooks
# =============================================================================
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token
ENABLE_DISCORD_ALERTS=true
